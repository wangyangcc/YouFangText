#import <UIKit/UIKit.h>

typedef enum
{
    MMVerticalAlignmentTop = 0, // default
    MMVerticalAlignmentMiddle,
    MMVerticalAlignmentBottom,
} MMVerticalAlignment;

@interface MMFontLabel : UILabel

/**
 *  是否根据行数调整label显示文本的基准
 */
@property (nonatomic, assign) BOOL isLimitedToNumberOfLines;

/**
 *  根据行数调整label显示文本的基准
 */
@property (nonatomic) MMVerticalAlignment verticalAlignment;

@end
